#include <stdio.h>
#include <stdlib.h>
void Introduccion()
{
	printf("Programa que carga 2 valores\n");
	printf("Suma los 2 valores\n");
	printf("Muestro el resultado\n");
}
void Nudo()
{
	float a,b,c;
	printf("Ingrese un  num: ");
	scanf("%f",&a);
	printf("Ingrese otro num: \n");
	scanf("%f",&b);
	c=a+b;
	printf("La suma es %f\n",c);
}
void Desenlace()
{
	printf("Fin del programa\n");
}

int main(int argc, char *argv[]) {
	Introduccion();
	Nudo();
	Desenlace();
	system("pause");
	return 0;
}
